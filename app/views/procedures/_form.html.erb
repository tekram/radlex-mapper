<%= form_for @procedure, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :rpid, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :rpid, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :short_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :long_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :long_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                procedures_path, :class => 'btn' %>
  </div>
<% end %>
